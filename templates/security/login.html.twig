{% extends 'base.html.twig' %}

{% block body %}
    <div class="Connexion">
        <form method="post" >
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se
                        déconnecter</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal titleLogin">Connexion</h1>
            <div class="LoginFormInputs">
                <label for="inputEmail">Adresse mail</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mediumInput" required
                       autofocus>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control mediumInput" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}
            </div>
            <div class="allButtons">

                <button class="btn btn-lg btn-primary loginButton" type="submit">
                    Se connecter
                </button>

                <a href="{{ path('register_home') }}" class="btn btn-lg btn-primary loginButton" type="button">
                    S'inscrire
                </a>

                <a href="{{ path('app_forgot_password_request') }}" class="btn btn-lg btn-primary loginButton" type="button">
                    Mot de passe oublier ?
                </a>

                <a href="{{ 'http://localhost:3000' }}" class="btn btn-lg btn-primary loginButton" type="button" style="margin-top: 40px;  background-color: rgb(13, 13, 13);">
                    Retour
                </a>
            </div>
        </form>
    </div>
{% endblock %}
