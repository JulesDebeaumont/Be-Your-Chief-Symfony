{% extends 'base.html.twig' %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="Inscription">
        <h1 class="titleLogin">Inscription</h1>
        <div class="LoginFormInputsRegister">
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.firstName) }}
            {{ form_row(registrationForm.lastName) }}
        </div>
        <span class="Avoidable">* champ facultatifs</span>
        <div class="allButtons">
            <button type="submit" class="btn btn-lg btn-primary loginButton">
                Enregistrer
            </button>
            <a href="{{ path('register_home') }}" class="btn btn-lg btn-primary loginButton" type="button" style="margin-top: 30px;  background-color: rgb(13, 13, 13);">
                Retour
            </a>
        </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
